<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/tvTrainName"
        tools:text="Sancaka"/>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        tools:text="Rp 170.000/org"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTrainName"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvDuration"
        tools:text="06.45 ----------- 45mnt ----------- 07.30"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/tvDuration"
        tools:text="YK"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        android:id="@+id/btnKeberangkatan"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@id/tvDuration"
        tools:text="SLO"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        android:id="@+id/btnTujuan"/>

</androidx.constraintlayout.widget.ConstraintLayout>